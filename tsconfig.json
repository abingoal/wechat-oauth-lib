  "compileOnSave": true,
  "compilerOptions": {
    "removeComments": false,
    "target": "es5",
    "declaration": true,
    "module": "commonjs",
    "lib": ["esnext"],
    "outDir": "./",
    "pretty": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
